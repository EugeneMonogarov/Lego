	int mB=0, mC=0, step=5 b=0;         // пользуемся переменными mB и mC для управления моторами в основной задаче,
	task MotorControl()                 // step - это максимальное количество единиц, на которое сможет увеличиться мощьность мотора за 1 цикл.
{
	while(true)
	{
	if (abs(mB)>100 mB = sgn(mB)*100;                // не даёт переменной mB стать больше 100 или меньше -100
	b=mB-motor[motorB];                              // b - разность желаемой и текущей скорости
	if (abs(b)>step)                                 // если "b" больше чем 1 шаг (изменение слишком большое), то
	motor[motorB]=motor[motorB]+sgn(b)*step;         // значение мотора B изменится на значение step со знаком переменной "b"
	else                                             // то есть сделает "шаг в сторону" нужной скорости
	motor[motorB]=mB;                                // а если изменение незначительно, то просто даст значение mB мотору
	wait1Msec(1);                                    // ту же операцию делаем с мотором C
	}
}
	task main()
{
	startTask(MotorControl);
	mB=mC=100;
	wait1Msec(2000);
	mB=mC=-100;
	wait1Msec(2000);
	...
	stopTask(motors);
}	
